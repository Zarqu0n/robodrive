<?xml version="1.0"?>
<launch>

  <!-- Arg -->
  <arg name="namespace" default="robodrive0"/>
    <group ns="$(arg namespace)">
        <node name="robodrive_gmapping" pkg="gmapping" type="slam_gmapping" >
          <remap from="scan" to="/scan"/>
          <param name="base_frame" value="robodrive0/link_base"/>
          <param name="odom_frame" value="robodrive0/odom"/>
          <param name="map_frame" value="map"/>

          <rosparam command="load" file="$(find robodrive_slam)/param/gmapping_params.yaml" />
        </node>
  </group>

</launch>